<%- include('./partials/header.ejs') %>

<!-- 404 Page -->
<main
  class="flex flex-col items-center justify-center min-h-screen bg-gray-50 px-6 py-12"
>
  <!-- Big 404 Text -->
  <h1 class="text-9xl font-extrabold text-blue-600 drop-shadow-lg">404</h1>

  <!-- Message -->
  <% if (message) { %>
  <h2 class="mt-4 text-3xl font-bold text-gray-800"><%= message %></h2>
  <% } else{ %>
  <h2 class="mt-4 text-3xl font-bold text-gray-800">Page Not Found</h2>
  <% } %>

  <p class="mt-2 text-gray-500 text-lg text-center max-w-md">
    Oops! The page you're looking for doesn’t exist or has been moved.
  </p>

  <!-- Illustration -->

  <!-- Back Button -->
  <a
    href="/"
    class="mt-8 inline-flex items-center px-6 py-3 text-white bg-blue-600 hover:bg-blue-700 rounded-lg shadow-md transition duration-300"
  >
    ⬅ Go Back Home
  </a>
</main>

<%- include('./partials/footer.ejs') %>
