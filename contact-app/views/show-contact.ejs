<%- include('./partials/header.ejs') %>

<!-- Details Card -->
<main class="max-w-2xl mx-auto mt-8 bg-white p-6 rounded-lg shadow">
  <!-- Profile Image -->
  <div class="flex items-center space-x-6">
    <img
      src="https://via.placeholder.com/100"
      alt="Profile"
      class="w-24 h-24 rounded-full border shadow"
    />
    <div>
      <h2 class="text-2xl font-bold text-gray-800">
        <%= user.first_name + " " + user.last_name %>
      </h2>
      <p class="text-gray-500">Friend from college</p>
    </div>
  </div>

  <!-- Details List -->
  <div class="mt-6 space-y-4">
    <div class="flex">
      <span class="w-32 font-semibold text-gray-700">First Name:</span>
      <span class="text-gray-600"> <%= user.first_name %></span>
    </div>
    <div class="flex">
      <span class="w-32 font-semibold text-gray-700">Last Name:</span>
      <span class="text-gray-600"> <%= user.last_name %></span>
    </div>
    <div class="flex">
      <span class="w-32 font-semibold text-gray-700">Email:</span>
      <span class="text-gray-600"><%= user.email %></span>
    </div>
    <div class="flex">
      <span class="w-32 font-semibold text-gray-700">Phone:</span>
      <span class="text-gray-600"><%= user.phone %></span>
    </div>
    <div class="flex">
      <span class="w-32 font-semibold text-gray-700">Address:</span>
      <span class="text-gray-600"><%= user.address %></span>
    </div>
  </div>

  <!-- Action Buttons -->
  <div class="mt-8 flex justify-end space-x-3">
    <a
      href="/"
      class="bg-gray-500 hover:bg-gray-600 text-white px-4 py-2 rounded-lg shadow"
      >Back</a
    >
    <a
      href="/update-contact"
      class="bg-yellow-500 hover:bg-yellow-600 text-white px-4 py-2 rounded-lg shadow"
      >Edit</a
    >
    <button
      class="bg-red-500 hover:bg-red-600 text-white px-4 py-2 rounded-lg shadow"
    >
      Delete
    </button>
  </div>
</main>
<%- include('./partials/footer.ejs') %>
