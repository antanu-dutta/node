<%- include('./partials/header.ejs') %>

<!-- Main Content -->
<main class="p-6">
  <!-- Top Bar -->
  <div class="flex items-center justify-between mb-4">
    <h2 class="text-xl font-semibold text-gray-700">All Contacts</h2>
    <a href="/add-contact">
      <button
        class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg shadow"
      >
        Add New
      </button></a
    >
  </div>

  <!-- Table -->
  <div class="overflow-x-auto bg-white rounded-lg shadow mb-10">
    <table class="min-w-full text-sm text-left text-gray-700">
      <thead class="bg-gray-100 text-gray-600 uppercase text-xs">
        <tr>
          <th class="px-6 py-3">SL No</th>
          <th class="px-6 py-3">First Name</th>
          <th class="px-6 py-3">Last Name</th>
          <th class="px-6 py-3">Email</th>
          <th class="px-6 py-3">Phone</th>
          <th class="px-6 py-3">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% contacts.forEach((contact, index) => { %>
        <tr class="border-b hover:bg-gray-50">
          <td class="px-6 py-4"><%= index + 1 %></td>
          <td class="px-6 py-4"><%= contact.first_name %></td>
          <td class="px-6 py-4"><%= contact.last_name %></td>
          <td class="px-6 py-4"><%= contact.email %></td>
          <td class="px-6 py-4"><%= contact.phone %></td>
          <td class="px-6 py-4 space-x-2">
            <a href="/show-contact/<%= contact._id %>">
              <button
                class="bg-green-500 hover:bg-green-600 text-white px-3 py-1 rounded"
              >
                View
              </button>
            </a>
            <a href="/update-contact/<%= contact._id %>">
              <button
                class="bg-yellow-500 hover:bg-yellow-600 text-white px-3 py-1 rounded"
              >
                Edit
              </button>
            </a>
            <a href="/delete-contact/<%= contact._id %>">
              <button
                class="bg-red-500 hover:bg-red-600 text-white px-3 py-1 rounded"
              >
                Delete
              </button>
            </a>
          </td>
        </tr>
        <% }) %>

        <!-- More rows here -->
      </tbody>
    </table>
  </div>
  <nav>
    <ul class="flex items-center space-x-1 justify-center">
      <!-- Previous Button -->
      <li>
        <% if (currentPage > 1) { %>
        <a
          href="/?page=<%= currentPage - 1 %>"
          class="px-3 py-2 text-gray-700 bg-white border border-gray-300 rounded-l hover:bg-gray-100"
          >Previous</a
        >
        <% } else { %>
        <span
          class="px-3 py-2 text-gray-400 bg-gray-100 border border-gray-300 rounded-l cursor-not-allowed"
          >Previous</span
        >
        <% } %>
      </li>

      <!-- Page Numbers -->
      <% for (let i = 1; i <= totalPages; i++) { %>
      <li>
        <a
          href="/?page=<%= i %>"
          class="px-3 py-2 border border-gray-300 hover:bg-gray-100 <%= currentPage === i ? 'bg-blue-600 text-white border-blue-600' : 'bg-white text-gray-700' %>"
          ><%= i %></a
        >
      </li>
      <% } %>

      <!-- Next Button -->
      <li>
        <% if (currentPage < totalPages) { %>
        <a
          href="/?page=<%= currentPage + 1 %>"
          class="px-3 py-2 text-gray-700 bg-white border border-gray-300 rounded-r hover:bg-gray-100"
          >Next</a
        >
        <% } else { %>
        <span
          class="px-3 py-2 text-gray-400 bg-gray-100 border border-gray-300 rounded-r cursor-not-allowed"
          >Next</span
        >
        <% } %>
      </li>
    </ul>
  </nav>
</main>

<%- include('./partials/footer.ejs') %>
